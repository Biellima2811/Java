package aplication;

import java.util.Locale;
import java.util.Scanner;

import entities.Funcionario;

public class Program {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		// Importação da classe
		Funcionario func = new Funcionario();
		
		System.out.print("==========================================\n");
		System.out.println("        Ficha do Funcionario");
		System.out.print("==========================================\n");
		
		System.out.print("%nNome: ");
		func.nome = sc.nextLine();
		
		System.out.print("%nSalario Bruto: R$");
		func.salarioBruto = sc.nextDouble();
		
		System.out.print("%nValor do Imposto: R$");
		func.imposto = sc.nextDouble();
				
		System.out.println("\nFuncionario: " +  func);
		
		System.out.println("Qual a porcentagem para aumentar o salario? (ex: 2.5)");
		double porcentagem = sc.nextDouble();
		if (porcentagem != 0) {
			System.out.println("Valor inserido incompativel, insira o numeração!");
		}
		else {
			func.aumentarSalario(porcentagem);
			System.out.println("Update Data: " + func);
		}
		sc.close();

	}

}
